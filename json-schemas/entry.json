{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "description": "What has ever been entered as a shopping list 'Item'",
    "examples": [
        {
            "name": "Kauf  Milch",
            "amount": {
                "count": 2,
                "prefix": "",
                "suffix": "liter",
                "index_in_name": 5
            },
            "shop": "9a24df80-63e5-4366-b857-66d0750dd862",
            "last_entered": 1597916392435,
            "previously_entered": [
                1597916332435,
                1597916234564
            ]
        },
        {
            "name": "nimm 2",
            "amount": null,
            "shop": "9a24df80-63e5-4366-b857-66d0750dd862",
            "last_entered": 1597916392435,
            "previously_entered": []
        }
    ],
    "required": [
        "name",
        "shop",
        "last_entered",
        "previously_entered",
        "amount"
    ],
    "title": "Shopping List Entry",
    "properties": {
        "name": {
            "description": "Static parts (without amounts) of how the 'Entry' should appear in the UI.",
            "examples": [
                "Kauf  Milch",
                "Nimm 2",
                " Joghurt",
                "Zahnpasta"
            ],
            "title": "Shopping List Entry Name",
            "type": "string"
        },
        "amount": {
            "default": null,
            "description": "The amount information parsed from the 'Item' input.",
            "examples": [
                {
                    "count": 2,
                    "prefix": "",
                    "suffix": "liter",
                    "index_in_name": 5
                },
                null
            ],
            "required": [
                "count",
                "prefix",
                "suffix",
                "index_in_name"
            ],
            "title": "Shopping List Entry Amount",
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "count": {
                    "minimum": 0,
                    "title": "count",
                    "type": "integer"
                },
                "prefix": {
                    "default": "",
                    "description": "Prefix for amounts parsed from 'Item' input.",
                    "examples": [
                        "",
                        "etwa ",
                        "~",
                        ">",
                        "min. "
                    ],
                    "title": "prefix",
                    "type": "string"
                },
                "suffix": {
                    "default": "",
                    "description": "Suffix for amounts parsed from 'Item' input.",
                    "examples": [
                        "",
                        "liter",
                        "g",
                        " Packungen"
                    ],
                    "title": "suffix",
                    "type": "string"
                },
                "index_in_name": {
                    "$id": "#/properties/amount/properties/index_in_name",
                    "type": "integer",
                    "title": "The index_in_name schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": 0,
                    "const": 5,
                    "examples": [
                        5
                    ],
                    "enum": [
                        5
                    ]
                }
            },
            "additionalProperties": false
        },
        "shop": {
            "description": "Reference to the shop this 'Entry' is assigned to.",
            "examples": [
                "9a24df80-63e5-4366-b857-66d0750dd862"
            ],
            "title": "shop reference",
            "type": "string"
        },
        "last_entered": {
            "description": "POSIX Timestamp of the last time this 'Entry' was added as an 'Item'.",
            "examples": [
                1597916392435
            ],
            "title": "last entered posix timestamp",
            "type": "integer"
        },
        "previously_entered": {
            "default": [],
            "description": "POSIX timestamps of previous values of 'last_entered', excluding the current 'last_entered' value.",
            "examples": [
                [
                    1597916332435,
                    1597916234564
                ]
            ],
            "title": "array of previous values for 'last_entered'",
            "uniqueItems": true,
            "type": "array",
            "items": {
                "title": "posix timestamp",
                "type": "integer"
            }
        }
    },
    "additionalProperties": false
}