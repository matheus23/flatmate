{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "description": "What is currently visible in the Shopping List",
    "examples": [
        {
            "id": "a0b85d33-a57e-40a3-a5a3-f04d61809f97",
            "shop": "fa91ff13-2362-413a-9b5b-4e0669b79a00",
            "name": "Milch",
            "amount": null,
            "checked": false
        },
        {
            "id": "467d60f4-d7e5-4223-8266-b8e116d2b332",
            "shop": "fa91ff13-2362-413a-9b5b-4e0669b79a00",
            "name": "Zahnpastatube ",
            "amount": {
                "count": 150,
                "prefix": "",
                "suffix": "g",
                "index_in_name": 14
            },
            "checked": false
        }
    ],
    "required": [
        "name",
        "shop",
        "amount",
        "checked"
    ],
    "title": "Shopping List Items",
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "string",
            "title": "identifier",
            "description": "UUID uniquely identifying an 'Item'",
            "examples": [
                "83b9abad-2fda-49da-bc41-9da32c677ed4"
            ]
        },
        "name": {
            "description": "Static parts (without amounts) of how the 'Entry' should appear in the UI.",
            "examples": [
                "Kauf  Milch",
                "Nimm 2",
                " Joghurt",
                "Zahnpasta"
            ],
            "title": "Shopping List Entry Name",
            "type": "string"
        },
        "amount": {
            "default": null,
            "description": "The amount information parsed from the 'Item' input.",
            "examples": [
                {
                    "count": 2,
                    "prefix": "",
                    "suffix": "liter",
                    "index_in_name": 5
                },
                null
            ],
            "required": [
                "count",
                "prefix",
                "suffix",
                "index_in_name"
            ],
            "title": "Shopping List Entry Amount",
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "count": {
                    "minimum": 0,
                    "title": "count",
                    "type": "integer"
                },
                "prefix": {
                    "default": "",
                    "description": "Prefix for parsed amounts",
                    "examples": [
                        "",
                        "etwa ",
                        "~",
                        ">",
                        "min. "
                    ],
                    "title": "prefix",
                    "type": "string"
                },
                "suffix": {
                    "default": "",
                    "description": "Suffix for parsed amounts",
                    "examples": [
                        "",
                        "liter",
                        "g",
                        " Packungen"
                    ],
                    "title": "suffix",
                    "type": "string"
                },
                "index_in_name": {
                    "$id": "#/properties/amount/properties/index_in_name",
                    "type": "integer",
                    "title": "amount index in name",
                    "description": "Insertion point of the amount in name.",
                    "examples": [
                        5
                    ]
                }
            },
            "additionalProperties": false
        },
        "shop": {
            "description": "Reference to the shop this 'Entry' is assigned to.",
            "examples": [
                "fa91ff13-2362-413a-9b5b-4e0669b79a00"
            ],
            "title": "shop reference",
            "type": [
                "string",
                "null"
            ]
        },
        "checked": {
            "default": false,
            "description": "Whether the Item is displayed as checked in the UI.",
            "examples": [
                true,
                false
            ],
            "title": "checked",
            "type": "boolean"
        }
    }
}